<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    tools:context="com.founder.zsy.founder.ui.TestActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_test"
        android:text="登录测试"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:id="@+id/policy_test_1"
        android:text="保单号查询测试"
         android:layout_margin="4dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:id="@+id/policy_test_2"
        android:text="投保人姓名测试"
        android:layout_alignParentRight="true"
        android:layout_margin="4dp"
        />


   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" 
       android:text="Title01"
       android:id="@+id/title01"
       android:layout_below="@+id/policy_test_2"
       android:layout_margin="8dp"
       />
    
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_01"
        android:layout_below="@+id/policy_test_2"
        android:layout_toRightOf="@+id/title01"
        android:layout_margin="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title02"
        android:id="@+id/title02"
        android:layout_below="@+id/edit_01"
        android:layout_margin="8dp"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_02"
        android:layout_below="@+id/edit_01"
        android:layout_toRightOf="@+id/title02"
        android:layout_margin="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title03"
        android:id="@+id/title03"
        android:layout_below="@+id/edit_02"
        android:layout_margin="8dp"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_03"
        android:layout_below="@+id/edit_02"
        android:layout_toRightOf="@+id/title03"
        android:layout_margin="8dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_test"
        android:layout_margin="8dp"
        android:textColor="@color/money_red"
        android:layout_below="@+id/edit_03"
        android:hint="结果显示在这里"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="开始测试"
        android:layout_margin="4dp"
        android:textColor="@color/money_red"

        android:id="@+id/start_test"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="坐标上传测试"
        android:layout_margin="4dp"
        android:id="@+id/laln_test"
        />
</RelativeLayout>
