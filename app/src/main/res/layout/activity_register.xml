<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.founder.zsy.founder.RegisterActivity">

    <include layout="@layout/toolbar_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_180PX">

        <ImageView
            android:id="@+id/icon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/DIMEN_30PX"
            android:src="@mipmap/login_icon_user_name" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/DIMEN_90PX"
            android:layout_toRightOf="@+id/icon_name"
            android:hint="手机号">

            <EditText
                android:id="@+id/phone_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:maxLength="11"
                android:maxLines="1"
                android:textColor="@color/i333333"
                android:textColorHint="@color/i666666"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_30PX">

        <ImageView
            android:id="@+id/icon_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/DIMEN_30PX"
            android:src="@mipmap/code" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/DIMEN_90PX"
            android:layout_toRightOf="@+id/icon_code"
            android:hint="验证码">

            <EditText
                android:id="@+id/code_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                android:textColor="@color/i333333"
                android:textColorHint="@color/i666666"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/getCode"
            android:layout_width="@dimen/DIMEN_160PX"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/DIMEN_100PX"
            android:background="@drawable/shape_code"
            android:gravity="center"
            android:padding="@dimen/DIMEN_16PX"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_30PX">

        <ImageView
            android:id="@+id/paw1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/DIMEN_30PX"
            android:src="@mipmap/login_icon_password" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/paw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/DIMEN_90PX"
            android:layout_toRightOf="@+id/paw1"
            android:hint="密码">

            <EditText
                android:id="@+id/paw_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLength="14"
                android:maxLines="1"
                android:textColor="@color/i333333"
                android:textColorHint="@color/i666666"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_30PX">

        <ImageView
            android:id="@+id/icon_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/DIMEN_30PX"
            android:src="@mipmap/nick" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/DIMEN_90PX"
            android:layout_toRightOf="@+id/icon_n"
            android:hint="昵称">

            <EditText
                android:id="@+id/nike_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:maxLength="10"
                android:maxLines="1"
                android:textColor="@color/i333333"
                android:textColorHint="@color/i666666"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_64PX"
        android:layout_marginRight="@dimen/DIMEN_64PX"
        android:layout_marginTop="@dimen/DIMEN_120PX"
        android:background="@drawable/ripple_login"
        android:gravity="center"
        android:paddingBottom="@dimen/DIMEN_24PX"
        android:paddingTop="@dimen/DIMEN_24PX"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>
